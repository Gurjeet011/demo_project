<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/rr12"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/outline"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardimg"
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                >



                <ImageView
                    android:id="@+id/productimg"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/flower"
                    android:scaleType="fitXY">



                </ImageView>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardimg"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Flower"
                android:textSize="9sp">


            </TextView>


            <TextView
                android:id="@+id/text2p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flower"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:singleLine="true"

                android:text="Moder flower"
                android:textColor="@color/black"
                android:textSize="9sp"
                tools:ignore="EllipsizeMaxLines">


            </TextView>

            <TextView
                android:id="@+id/text3p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text2p"
                android:text="price1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp">
            </TextView>
            <TextView
                android:id="@+id/text4p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text2p"
                android:layout_toRightOf="@id/text3p"
                android:text="price2"
                android:textSize="12sp">
            </TextView>

            <TextView
                android:id="@+id/text5p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text2p"
                android:layout_toRightOf="@id/text4p"
                android:text="16%off"
                android:paddingHorizontal="2dp"
                android:paddingVertical="2dp"
                android:gravity="center"
                android:background="@drawable/background"
                android:textColor="@color/black"
                android:textSize="10sp">
            </TextView>

            <TextView
                android:id="@+id/text6p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="earliest delivery"
                android:layout_below="@id/text3p"
                android:textSize="9sp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
            </TextView>
            <TextView
                android:id="@+id/text7p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomorrow"
                android:textColor="#FF1744"
                android:layout_below="@id/text3p"
                android:textSize="9sp"
                android:layout_toRightOf="@id/text6p"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
            </TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>